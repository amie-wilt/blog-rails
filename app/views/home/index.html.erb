<div>
  <% if current_user %>
    <%= link_to 'New Post', new_post_path %>
  <% end %>
</div>



<div class="container">

  <h1>Welcome to my BLOG!</h1>

  <% @posts.each do |post| %>
      <h2><%= post.title %></h2>
      <p class="author"><%= post.author %></p>
      <p><%= post.body %></p>
      <p><%= @post.all_tags %>
      </p>
  <% end %>

  <p class="posts-link">View more <%= link_to 'Posts', posts_path %>!</p>
</div>