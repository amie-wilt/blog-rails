<div class="container">
  <h1>Posts Index Page</h1>

  <% @posts.each do |post| %>
      <div class="post-index-posts-container">
        <h2 class="post-index-post-title"><%= post.title %></h2>
        <span><%= post.author %></span>
        <span><%= post.date %></span>
        <p><%= post.body %></p>
        <p><%= raw tag_links(post.all_tags) %></p>

        <%= link_to 'Show', post %>
        <% if current_user && post.user == current_user %>
            |  <%= link_to 'Edit', edit_post_path(post) %> |
            <%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %>
        <% end %>
      </div>
  <% end %>

  <% if current_user %>
      <%= link_to 'New Post', new_post_path %>
  <% end %>
</div>